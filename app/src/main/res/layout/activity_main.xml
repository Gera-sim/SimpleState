<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="let start"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@id/Increment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/Increment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Increment"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/RandomColor"
        app:layout_constraintEnd_toEndOf="@id/TextView"
        app:layout_constraintStart_toStartOf="@id/TextView"
        app:layout_constraintTop_toBottomOf="@id/TextView"

        />

    <Button
        android:id="@+id/RandomColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Random Color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/SwitchVisibility"
        app:layout_constraintEnd_toEndOf="@id/TextView"
        app:layout_constraintStart_toStartOf="@id/TextView"
        app:layout_constraintTop_toBottomOf="@id/Increment"
        />

    <Button
        android:id="@+id/SwitchVisibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Switch Visibility"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/TextView"
        app:layout_constraintStart_toStartOf="@id/TextView"
        app:layout_constraintTop_toBottomOf="@id/RandomColor"
        />


</androidx.constraintlayout.widget.ConstraintLayout>